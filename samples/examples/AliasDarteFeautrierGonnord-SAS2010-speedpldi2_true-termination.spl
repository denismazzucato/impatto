var m : int, n : int, v1 : int, v2 : int, result : int;
begin
  v1 = n;
  v2 = 0;
    // INPUTBOUNDS
  if n >= 0 and m > 0 then
    v1 = n;
    v2 = 0;
    while v1 > 0 do
      if v2 < m then
        v2 = v2 + 1;
        v1 = v1 - 1;
      else
        v2 = 0;
      endif;
    done;
  endif;
  result = v1 + v2;
  // BUCKET
end
