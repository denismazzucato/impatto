var x : real, y : real, tmp : real, result : int;
begin
  // INPUTBOUNDS
  if x < 0 then
    tmp = -x + y;
  else
    tmp = x + y;
  endif;
  if tmp < 3 then
    result = 0;
  else 
    if tmp >= 5 then
      result = 3;
    else
      if tmp - 2 < 2  then
        result = 1;
      else
        result = 2;
      endif;
    endif;
  endif;
  // BUCKET
end